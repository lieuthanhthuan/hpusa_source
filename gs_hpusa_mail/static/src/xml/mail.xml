<?xml version="1.0" encoding="UTF-8"?><templates id="template" xml:space="preserve">    <t t-extend="mail.thread.list_recipients">        <t t-jquery="div.oe_recipients" t-operation="replace">			<t t-foreach='widget.recipients' t-as='recipient'>				<label t-attf-title="Add as recipient and follower (reason: #{recipient.reason})">					<input type="checkbox" t-att-checked="undefined" t-att-data="recipient.email_address"/>					<t t-raw="recipient.name"/> (<t t-raw="recipient.email_address"/>)				</label>			</t>        </t>    </t></templates>