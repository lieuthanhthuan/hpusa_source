                <field name="quantity_website" sum="Quantity on Website"/>
                <field name="quantity_sold" sum="Total Quantity Sold"/>
                <field name="company_id" />
            </tree>
        </field>
    </record>

 <!-- Marketing stage form view -->
  <record id="view_marketing_stage_form" model="ir.ui.view">
            <field name="name">report.marketing.stage.form</field>
            <field name="model">report.marketing.stage</field>
            <field name="arch" type="xml">
                <form string="Marketing Stage" version="7.0">
			    	<sheet>
				    	<div class="oe_title">
	                    	<label for="name" class="oe_edit_only"/>
	                        <h1><field name="name"/></h1>
	                    </div>
				    	<group>
				    		<group>
					    		<field name="time_start"/>
					        	<field name="time_end"/>
					        	<field name="sale_off_percent" on_change="onchange_percent(sale_off_percent,context)"/>
					        	<field name="company_id" readonly="1"/>
				        	</group>
				        	<group>
				        		<field name="quantity_total" />
	                    		<field name="quantity_website" />
	                    		<field name="quantity_sold" />
	                    		<button name="action_update" string="Update" type="object" />
				        	</group>
				        </group>
				        <notebook>
				        	<page string="Report Lines">
				            	<field name="line_master_id">
				            		<tree>
	                					<field name="product_id"/>
						                <field name="style"/>
						                <field name="sku"/>
						                <field name="sku_id" sum="Total Cost"/>
						                <field name="product_type"  />
						                <field name="product_quantity" sum="Total Quantity" />
						                <field name="regular_price" sum="Total Regular "/>
						                <field name="percent"/>
						                <field name="sale_off_price" sum="Total sale off"/>
						                <field name="state"/>
						                <field name="sold_date"/>
						        	</tree>
				            	</field>
				            </page>
			             </notebook>
			    	</sheet>
		        <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            	</form>
        </field>
    </record>

