<?xml version="1.0"?>
<openerp>
<data>

 <!-- Marketing Program search view -->
		<record id="report_marketing_filter" model="ir.ui.view">
            <field name="name">Report marketing</field>
            <field name="model">report.marketing</field>
            <field name="arch" type="xml">
                <search string="Filters">
                    <filter icon="terp-accessories-archiver" string="Active" domain="[('active','=',True)]" name="Actived" help="Actived"/>
                    <group expand="0" string="Group By...">
                        <filter string="Start Date" icon="terp-gtk-jump-to-rtl" domain="[]" context="{'group_by':'date_start'}" help="Order reference"/>
                        <filter string="End Date" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'date_stop'}"/>
                        <filter string="Company" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'company'}"/>
                        <filter string="State" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

     <!-- Report Marketing program form view -->
	<record id="view_report_marketing_form" model="ir.ui.view">
            <field name="name">Report Marketing</field>
            <field name="model">report.marketing</field>
            <field name="arch" type="xml">
                <form string="Marketing Report" version="7.0">
                    <header>
                    	<button name="action_start" string="Submit" states="draft" class="oe_highlight"  groups="base.group_user" type="object"/>
                    	<button name="action_end" string="Finish" states="inprogress" class="oe_highlight" groups="base.group_user" type="object"/>
                    	<button name="action_cancel" string="Cancel" states="draft,inprogress" groups="base.group_user" type="object"/>
                    	<button name="action_new" string="Set to Draft" states="cancel"  groups="base.group_user" type="object"/>
            	 		<field name="state" widget="statusbar" statusbar_visible="draft,inprogress,done,cancel"/>
            		</header>
            		<sheet>
	            		<div class="oe_title">
	                    	<label for="name" class="oe_edit_only"/>
	                        <h1><field name="name"/></h1>
	                    </div>
	            		<group>
				            <group>
				                <field name="date_start" select="0"/>
				                <field name="date_stop" select="0"/>
				                <field name="company" select="0"/>
				                <field name="description"/>
		                    </group>
		                 </group>
		                	<group col="4">
			             <notebook>
				            <page string="Report Lines">
				            	<field name="report_line">
				            		<tree>
				            	   		<field name="name"/>
	                					<field name="time_start"/>
	                					<field name="time_end"/>
	                					<field name="quantity_total" sum="Total quantity Sale Off"/>
	                					<field name="quantity_website" sum="Quantity on Website"/>
	                					<field name="quantity_sold" sum="Total Quantity Sold"/>
	                				</tree>
				            	</field>
				            </page>
			              </notebook>
				       </group>
				    </sheet>
				    <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>

            	</form>
        </field>
    </record>

<!--Report Marketing Tree View -->
    <record model="ir.ui.view" id="view_loyalty_tree">
        <field name="name">Report Marketing</field>
        <field name="model">report.marketing</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Marketing Report">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_stop"/>
                <field name="company"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

 	<record id="view_marketing_campaign_calendar" model="ir.ui.view">
            <field name="name">Marketing Campaign</field>
            <field name="model">report.marketing</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <calendar  date_start="date_start" string="Marketing Campaign">
                    <field name="name"/>
                    <field name="description"/>
                </calendar>
            </field>
        </record>

<record id="view_report_marketing_gantt" model="ir.ui.view">
            <field name="name">Report Marketing</field>
            <field name="model">report.marketing</field>
            <field name="arch" type="xml">
               <gantt string="Marketing Report" date_start="date_start" date_stop="date_stop" color="inventor_id">
					<level object="report.marketing"  link="id" domain="[]">
						<field name="name"/>
					</level>
				</gantt>
            </field>
        </record>

<!--Marketing Report View Action -->
    <record model="ir.actions.act_window" id="action_report_marketing">
        <field name="name">Report Marketing</field>
        <field name="res_model">report.marketing</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,calendar,gantt</field>
    </record>

<!--Marketing Report stage search View-->
<record id="view_report_marketing_stage_filter" model="ir.ui.view">
            <field name="name">Report marketing Stage</field>
            <field name="model">report.marketing.stage</field>
            <field name="arch" type="xml">
